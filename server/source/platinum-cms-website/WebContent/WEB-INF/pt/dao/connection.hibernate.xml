<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- 开启 SQL 日志 -->
        <property name="hibernate.show_sql">true</property>
        
        <!-- 当前会话模式 -->
        <property name="hibernate.current_session_context_class">thread</property>
        
        <!-- JDBC 连接池（使用 Oracle 内置连接池） -->
        <property name="hibernate.connection.pool_size">1</property>
        
        <!-- 数据库连接设置 -->
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <!-- <property name="hibernate.connection.url">jdbc:oracle:thin:@192.168.1.100:1521:ptdb</property> -->
        <property name="hibernate.connection.url">jdbc:oracle:thin:@211.65.211.248:1521:ptdb</property>
        <property name="hibernate.connection.username">PT_SYS</property>
        <property name="hibernate.connection.password">sys</property>
        
        <!-- SQL 方言 -->
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
    </session-factory>
</hibernate-configuration>